{
  "name": "@nejcm/react-boilerplate",
  "version": "0.0.0-semantically-released",
  "author": "Nejc Mursic <nmursi2@gmail.com> (https://github.com/nejcm)",
  "description": "Starter kit for your react projects",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nejcm/react-boilerplate"
  },
  "bugs": {
    "url": "https://github.com/nejc/react-boilerplate/issues"
  },
  "homepage": "https://github.com/nejcm/react-boilerplate",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "keywords": [
    "react",
    "library",
    "js",
    "es6"
  ],
  "files": [
    "build"
  ],
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "format": "prettier ./src/**/*.js --write",
    "clean": "rimraf build coverage",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "test:cov": "react-scripts test --coverage --colors --watchAll=false && jest-coverage-badges",
    "test:build": "react-scripts test --coverage --colors --silent --watchAll=false && jest-coverage-badges",
    "test:watch": "jest --watch",
    "docs:dev": "docz dev",
    "docs:build": "docz build",
    "postdocs:build": "cpy \"**/*\" ../../.docz/dist --cwd=\"other/public\" --parents",
    "validate": "npm run format && npm run lint && npm run test:build",
    "setup": "npm run clean && npm run validate",
    "semantic-release": "semantic-release"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run validate"
    }
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/react": "^10.0.1",
    "@testing-library/user-event": "^10.0.0",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-scripts": "3.4.0",
    "babel-eslint": "10.0.3",
    "webpack": "4.41.5",
    "webpack-dev-server": "3.10.2",
    "@semantic-release/changelog": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.0.4",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "@semantic-release/npm": "^7.0.4",
    "storybook-addon-jsx": "^7.1.14",
    "@storybook/addon-actions": "^5.3.17",
    "@storybook/addon-knobs": "^5.3.17",
    "@storybook/addon-links": "^5.3.17",
    "@storybook/addon-notes": "^5.3.17",
    "@storybook/addon-options": "^5.3.17",
    "@storybook/addon-storyshots": "^5.3.17",
    "@storybook/addons": "^5.3.17",
    "@storybook/react": "^5.3.17",
    "cpy-cli": "^3.1.0",
    "docz": "^2.2.0",
    "docz-theme-default": "^1.2.0",
    "eslint-config-kentcdodds": "^14.8.0",
    "eslint-plugin-react-hooks": "^2.5.0",
    "jest-coverage-badges": "^1.1.2",
    "jest-resolve": "25.1.0",
    "jest-watch-typeahead": "0.4.2"
  },
  "devDependencies": {
    "codecov": "^3.6.5",
    "husky": "4.2.3",
    "rimraf": "^3.0.2",
    "semantic-release": "17.0.4"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/*.story.{js,jsx,ts,tsx}",
      "!src/serviceWorker.js",
      "!src/index.{js,jsx,ts,tsx}"
    ],
    "coverageReporters": [
      "json-summary",
      "json",
      "lcov",
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
